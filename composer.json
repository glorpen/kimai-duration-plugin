{
  "version": "1.0.0",
  "authors": [
    {
      "name": "Arkadiusz DziÄ™giel",
      "email": "arkadiusz.dziegiel@glorpen.pl",
      "homepage": "https://glorpen.eu"
    }
  ],
  "type": "kimai-plugin",
  "autoload": {
    "psr-4": {
      "KimaiPlugin\\GlorpenDurationBundle\\": ""
    }
  },
  "scripts": {
    "codestyle": "php-cs-fixer fix --dry-run --verbose --show-progress=none",
    "codestyle-fix": "php-cs-fixer fix",
    "codestyle-check": "vendor/bin/php-cs-fixer fix --dry-run --verbose --config=.php_cs.dist --using-cache=no --show-progress=none --format=checkstyle",
    "phpstan": "vendor/bin/phpstan analyse . -c phpstan.neon --level=7",
    "linting": [
      "composer validate",
      "@codestyle-check",
      "@phpstan"
    ]
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^0.12.19",
    "phpstan/phpstan-doctrine": "^0.12.10",
    "kevinpapst/kimai2": "1.11",
    "symfony/console": "^4.0",
    "symfony/event-dispatcher": "^4.0"
  },
  "extra": {
    "kimai": {
      "require": "1.11",
      "version": "1.0.0",
      "name": "Glorpen Duration"
    }
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "require": {
    "php": "^7.2.9"
  },
  "license": "GPL-3.0-or-later"
}
